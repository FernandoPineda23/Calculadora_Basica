        <Grid.Background>
            <ImageBrush ImageSource="/calculator-on-a-white-background-free-vector.jpg"/>
        </Grid.Background>
        <Button Content="3" HorizontalAlignment="Left" Margin="404,144,0,0" VerticalAlignment="Top" Width="70" Height="35" FontSize="24" RenderTransformOrigin="2.833,2.701" FontWeight="Bold" Grid.Row="1"/>
